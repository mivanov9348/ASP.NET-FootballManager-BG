@using FootballManager.Core.Models.Draw
@model DrawViewModel

@{
    var num = 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Team Draw System</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        h1, h2, h5 {
            text-align: center;
            color: #007bff;
        }

        .flex-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin: 20px auto;
        }

        .teams-table, .fixtures-table {
            width: 48%;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            background-color: #fff;
        }

        .teams-container {
            display: flex;
            flex-wrap: wrap;
        }

            .teams-container .team {
                width: calc(50% - 10px);
                margin: 5px;
                padding: 10px;
                border: 1px solid #ccc;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
                background-color: #f9f9f9;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        .numOfTeams {
            justify-content: center;
            text-align: center;
        }

        .draw-button-container {
            justify-content: center;
            align-items: center;
            width: 15%;
            margin-top: 30px;
            text-align: center;
        }

        .draw-button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .draw-button:hover {
                background-color: #0056b3;
            }

        .separator {
            width: 100%;
            height: 1px;
            background-color: #ccc;
            margin: 20px 0;
            display: block;
            clear: both;
        }
    </style>
</head>
<body>
    <form method="post">
        <div class="flex-container">
            <div class="teams-table">
                <h5>Teams</h5>
                <hr />
                <div class="teams-container">
                    @foreach (var team in Model.RemainingTeams)
                    {
                        <div class="team">@team.Name</div>
                    }
                </div>
                @if (!Model.IsDrawStarted)
                {
                    <button class="draw-button" asp-action="GenerateDraw">Generate Draw</button>
                    <br />
                    <select class="numOfTeams" asp-for="@Model.NumberOfTeams">
                        <option value="4">4</option>
                        <option value="8">8</option>
                        <option value="16">16</option>
                        <option value="32">32</option>
                    </select>
                }
            </div>

            <div class="draw-button-container">
                @if (Model.IsDrawStarted)
                {
                  
                    <input type="submit" asp-action="Draw" asp-route-drawId="@Model.CurrentDrawId" class="draw-button" value="Draw" />
              
                    <input type="submit" asp-action="FinalizeDraw" asp-route-drawId="@Model.CurrentDrawId" class="draw-button" value="Finalize Draw" />
                    
                }
            </div>
            <div class="fixtures-table">
                <h5>Fixtures</h5>
                <hr />
                <table>
                    <thead>
                        @foreach (var fixture in Model.AllFixtures)
                        {
                            num += 1;
                            <tr>
                                <th>@num</th>
                                <th>@(fixture.HomeTeam != null ? fixture.HomeTeam.Name : "Home Team")</th>
                                <th>@(fixture.AwayTeam != null ? fixture.AwayTeam.Name : "Away Team")</th>
                            </tr>
                        }
                    </thead>
                    @if (Model.IsDrawStarted)
                    {
                        <tbody>
                            <!-- Fixtures will be dynamically populated after draw -->
                        </tbody>
                    }
                </table>
            </div>
        </div>

        <!-- Add a horizontal separator between the two tables -->
        <div class="separator"></div>
    </form>
</body>
</html>
