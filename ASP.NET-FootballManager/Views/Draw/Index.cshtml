@using FootballManager.Core.Models.Draw
@model DrawViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Team Draw System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        h1, h2 {
            text-align: center;
        }

        .flex-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin: 20px auto;
        }

        .teams-table, .fixtures-table {
            width: 48%;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .teams-container {
            display: flex;
            flex-wrap: wrap;
        }

            .teams-container .team {
                width: calc(50% - 10px);
                margin: 5px;
                padding: 10px;
                border: 1px solid #ccc;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        .draw-button-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 10%;
            margin-top: 200px;
        }

        .draw-button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .draw-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <h1>Team Draw System</h1>
    <form method="post">
        <div class="flex-container">
            <div class="teams-table">
                <h2>Teams</h2>
                <div class="teams-container">
                    @foreach (var team in Model.RemainingTeams)
                    {
                        <div class="team">@team.Name</div>
                    }
                </div>
                @if (!Model.IsDrawStarted)
                {
                    <button class="draw-button" asp-action="GenerateDraw">Generate Draw</button>
                    <select asp-for="@Model.NumberOfTeams">
                        <option value="4">4</option>
                        <option value="8">8</option>
                        <option value="16">16</option>
                        <option value="32">32</option>
                    </select>
                }
            </div>
            <div class="draw-button-container">
                @if (Model.IsDrawStarted)
                {
                    <input type="submit" asp-action="Draw" asp-route-drawId="@Model.CurrentDrawId" class="draw-button" value="Draw" />
                }
            </div>
            <div class="fixtures-table">
                <h2>Fixtures</h2>
                <table>
                    <thead>
                        @foreach (var fixture in Model.AllFixtures)
                        {
                            <tr>
                                <th>1</th>
                                <th>@(fixture.HomeTeam != null ? fixture.HomeTeam.Name : "Team 1")</th>
                                <th>@(fixture.AwayTeam != null ? fixture.AwayTeam.Name : "Team 2")</th>
                            </tr>
                        }
                    </thead>
                    @if (Model.IsDrawStarted)
                    {
                        <tbody>
                            <!-- Fixtures will be dynamically populated after draw -->
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </form>
</body>
</html>
