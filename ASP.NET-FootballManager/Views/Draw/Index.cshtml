@using FootballManager.Core.Models.Draw
@model DrawViewModel

@{
    var num = 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Draw Menu</title>
    <style>
        body {
            background-image: url("/Images/Wallpapers/Draw.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: 'OLD SPORT 02 ATHLETIC NCV';
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.7);
                z-index: -1;
            }

        h1, h2, h5 {
            text-align: center;
            color: #007bff;
        }

        .flex-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin: 20px auto;
        }

        .teams-table, .fixtures-table {
            width: 48%;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            background-color: #fff;
        }

        .teams-container {
            display: flex;
            flex-wrap: wrap;
        }

            .teams-container .team {
                width: calc(50% - 10px);
                margin: 5px;
                padding: 10px;
                border: 1px solid #ccc;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
                background-color: #f9f9f9;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        .numOfTeams {
            justify-content: center;
            text-align: center;
        }

        .draw-button-container {
            justify-content: center;
            align-items: center;
            width: 15%;
            margin-top: 30px;
            text-align: center;
        }

        .draw-button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .draw-button:hover {
                background-color: #0056b3;
            }

        .separator {
            width: 100%;
            height: 1px;
            background-color: #ccc;
            margin: 20px 0;
            display: block;
            clear: both;
        }

        .container {
            display: flex;
            justify-content: space-between;
            width: 300px; /* Adjust the width as needed */
            margin-left: 32%;
            margin-top: 20px;
        }

            .container input[type="submit"] {
                width: 45%; /* Each button takes up 45% width */
            }
    </style>
</head>
<body>
    <form method="get">
        <div class="container">
            <input type="submit" value="Elimination" asp-action="EliminationDraw" />
            <input type="submit" value="Group" asp-action="GroupDraw" />
        </div>
    </form>
</body>
</html>
