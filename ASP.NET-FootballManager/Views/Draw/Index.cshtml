@using FootballManager.Core.Models.Draw
@model DrawViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Draw Menu</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-image: url("/Images/Wallpapers/Draw.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .overlay {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: -1;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }

        h1 {
            color: #007bff;
            margin-bottom: 20px;
        }

        .button-container {
            display: flex;
            flex-direction: column; /* Align buttons vertically */
            gap: 20px; /* Add space between buttons */
            margin-top: 20px;
        }

        .action-button {
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .elimination-button,
        .group-button {
       
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease, box-shadow 0.3s ease, color 0.3s ease; 
        }

        .elimination-button {
            background-color: #ff6b6b;
            opacity: 0.8;
        }

            .elimination-button:hover {
                background-color: #ff6b6b;
                box-shadow: 0 5px 10px rgba(255, 107, 107, 0.7); 
                color: black; 
            }

        .group-button {
            background-color: #6bffbb;
        }

            .group-button:hover {
                background-color: #6bffbb;
                box-shadow: 0 5px 10px rgba(107, 255, 187, 0.7); /* Adjusted box shadow on hover */
                color: black; /* Changing text color on hover */
            }
    </style>
</head>
<body>
    <div class="overlay"></div>
    <div class="container">
        <form method="get" class="button-container">
            <input type="submit" value="Elimination Draw" class="action-button elimination-button" asp-action="EliminationDraw" />
            <input type="submit" value="Group Draw" class="action-button group-button" asp-action="GroupDraw" />
        </form>
    </div>
</body>
</html>
