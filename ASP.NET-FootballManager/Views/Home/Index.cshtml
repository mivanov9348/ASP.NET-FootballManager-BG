@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model GameViewModel

<style>

   body {
        background-image: url("/Images/Wallpapers/Index.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: 'OLD SPORT 02 ATHLETIC NCV';
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            z-index: -1;
        }

    .title {
        margin-top: 100px;
        color: gold;
        width: 100%;
        font-size: 50px;
        text-align: center;
        font-family: 'OLD SPORT 01 COLLEGE NCV';
    }

    .Options {
        margin-top: 20px;
        color: gold;
        width: 100%;
        font-size: 40px;
        text-align: center;
        font-family: 'OLD SPORT 01 COLLEGE NCV';
    }

        .Options a {
            text-decoration: none;
            font-family: 'OLD SPORT 01 COLLEGE NCV';
            padding: 6px 8px 6px 16px;
            color: blue;
            text-align: center;
        }

            .Options a:hover {
                text-decoration: none;
                font-family: 'OLD SPORT 01 COLLEGE NCV';
                padding: 6px 8px 6px 16px;
                color: gold;
            }

    hr {
        color: white;
    }

</style>

<body>

    <h1 class="title">FOOTBALL MANAGER</h1>
    <form method="get">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="Options">
                @if (@Model.ExistGame)
                {
                    <a asp-action="Index" asp-controller="Inbox">
                        <span class="nav-text">
                            Continue Game
                        </span>
                    </a>
                }
                <hr />
                <a asp-action="NewGame">
                    <span class="nav-text">
                        New Game
                    </span>
                </a>
                <hr>
                <a asp-action="Index" asp-controller="GameOptions">
                    <span class="nav-text">
                        Options
                    </span>
                </a>
                <hr>
                <a asp-action="GenerateDemoYear" asp-controller="Calendar">
                    <span class="nav-text">
                        Demo Year
                    </span>
                </a>
                <hr>
                <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <span class="nav-text">
                        Logout
                    </span>
                </a>
            </div>

        }
        else
        {
            <div class="Options">
                <hr />
                <a asp-area="Identity" asp-page="/Account/Login">
                    <span class="nav-text">
                        Login
                    </span>
                </a>
                <br>
                <a asp-area="Identity" asp-page="/Account/Register">
                    <span class="nav-text">
                        Register
                    </span>
                </a>
            </div>
        }
    </form>
</body>