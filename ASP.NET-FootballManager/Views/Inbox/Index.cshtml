@using FootballManager.Core.Models.Menu
@model InboxViewModel
<partial name="~/Views/Shared/_SideBar.cshtml" />

<style>
    /* Reset some default styles */
    body, h1, h2, p, img {
        margin: 0;
        padding: 0;
        border: 0;
    }

    /* Basic layout styles */
    .inbox-container {
        display: flex;
        height: 100vh;
        font-family: Arial, sans-serif;
    }

    .inbox-sidebar {
        flex: 0 0 20%;
        background-color: #f0f0f0;
        padding: 20px;
    }

    .selected-news {
        flex: 1;
        background-color: #fff;
        padding: 20px;
        border-left: 1px solid #ddd;
    }

    /* Inbox header styles */
    .inbox-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    /* Search bar styles */
    .search-bar {
        display: flex;
        align-items: center;
    }

        .search-bar input {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .search-bar button {
            margin-left: 10px;
            padding: 5px 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

    /* Message item styles */
    .message-item {
        display: flex;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
    }

        .message-item.unread {
            background-color: #f5f5f5;
            font-weight: bold;
        }

    /* Sidebar news list styles */
    .news-list {
        list-style: none;
        padding: 0;
    }

    .news-item {
        margin-bottom: 10px;
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

        .news-item a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Inbox</title>
</head>
<body>
    <form method="post">
        <div class="inbox-container">
            <div class="inbox-sidebar">
                <div class="news-list">
                    @foreach (var inbox in Model.News)
                    {
                        <p>Season: @inbox.Year Day: @inbox.Day</p>
                        <div class="news-item"><a asp-action="OpenNews" asp-route-newsId="@inbox.Id">@inbox.MessageTitle</a></div>
                        <hr />
                    }
                </div>
            </div>

            <div class="selected-news">

                <h2>@Model.MessageTitle</h2>
                <hr />
                <p>@Model.FullMessage</p>
                <hr />
                <img src="/Images/@Model.ImageUrl" width="180" height="180" />
            </div>
        </div>
    </form>
</body>
</html>
