@using FootballManager.Core.Models.Match
@model MatchDayViewModel

<style>

    body {
        background-image: url("/Images/Wallpapers/Matchday.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font-family: 'OLD SPORT 02 ATHLETIC NCV';
    }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            z-index: -1;
        }

    label {
        margin-left: 500px;
        font-size: 50px;
        color: gold;
    }

    .round {
        margin-left: 590px;
        color: darkkhaki;
    }

    .fixtures {
        text-align: center;
    }

    hr {
        color: white;
    }

    table, th, td {
        border: 1px solid;
    }


    .table-dark {
        font-size: 20px;
        opacity: 0.8;
        color: white;
        font-weight:bolder;
    }

    .submit {
        margin-top: -30px;
        text-align: center;
        color: black;
        font-weight: bolder;
        width: 150px;
        height: 30px;
        float: right;
    }

        .submit:hover {
            box-shadow: 0px 0px 30px white;
        }

</style>

<body>

    <label>MATCHDAY</label>
    <h5 class="round">Round @Model.Round</h5>
    <form method="get">
        <input type="submit" value="Next" class="submit" asp-action="Tactics" />
    </form>
    <hr />

    <div class="fixtures">

        <table class="table table-dark">
            <thead>
                <tr>
                    <th style="width:10px;">Round</th>
                    <th style="width:30px;">League</th>
                    <th style="width:80px;">HT</th>
                    <th style="width:10px;">HG</th>
                    <th style="width:10px;">AG</th>
                    <th style="width:200px;">AT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fixture in @Model.DayFixtures)
                {
                    <tr>
                        <th scope="row">@fixture.Round</th>
                        <td>@fixture.CompetitionName</td>
                        <td>@fixture.HomeTeamName</td>
                        <td>@fixture.HomeTeamGoal</td>
                        <td>@fixture.AwayTeamGoal</td>
                        <td>@fixture.AwayTeamName</td>
                    </tr>
                }

            </tbody>
        </table>



    </div>


</body>