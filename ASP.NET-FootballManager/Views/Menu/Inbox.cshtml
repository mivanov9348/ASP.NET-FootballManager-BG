@model InboxViewModel

<partial name="_SideBar" />

<style>

    body {
        background-color: grey;
        font-family: 'OLD SPORT 02 ATHLETIC NCV';
    }

    .News {
        box-shadow: 0px 0px 30px black;
        margin-top: -1200px;
        margin-left: 100px;
        border: 2px solid black;
        text-align: center;
        font-size: 20px;
    }

    .type {
        margin-top: 5px;
        font-style: italic;
    }

    .Title {
        margin-top: 200px;
        margin-left: 100px;
        text-align: center;
        font-size: 50px;
        color: white;
    }

    hr {
        margin-left: 100px;
    }

    .text {
        color: white;
    }

    .close {
        color: red;
        background-image: none;
        background-color: transparent;
        float: right;
        font-size: 12px;
    }

</style>

<body>
    <form method="get">
        <div class="Title">
            <label>NEWS</label>
        </div>
        <hr />
        @foreach (var item in @Model.News)
        {
            <div class="News">
                <input type="submit" asp-action="DeleteNews" asp-route-id="@item.Id" class="close" value="X" />
                <p class="type">Year: @item.Year Day: @item.Day</p>
                <p class="text">@item.Message</p>
            </div>
            <hr />
        }
    </form>
</body>