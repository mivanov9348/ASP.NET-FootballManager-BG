@using FootballManager.Core.Models.Player
@using FootballManager.Infrastructure.Data.DataModels;
@model PlayersViewModel

<style>
    body {
        background-color: black;
        font-family: 'OLD SPORT 02 ATHLETIC NCV';
    }

    .players {
        text-align: center;
        margin-top: 30px;
        color: white;
        font-size: 20px;
        margin-left: -20px;
    }

        .players table {
            box-shadow: 0px 0px 10px white;
            border: 5px ridge white;
            width: 100%;
            table-layout: auto;
        }

        .players th {
            color: peru;
        }

    .select {
        margin-left: 150px;
        margin-top: -10px;
        font-weight: bolder;
    }

    table, th, td {
        border: 1px solid;
    }

    .Title {
        margin-top: 30px;
        color: white;
        font-size: 50px;
        font-family: fantasy;
        text-align: center;
    }

    .playerStatsLink {
        text-decoration: none;
        color: white;
    }

        .playerStatsLink:hover {
            color: blue;
        }

    .SelectCompetition {
        font-size: 15px;
        margin-left: 520px;
    }

    .attributes {
        color:lightskyblue;
    }

</style>

@{
    var num = 0;
    var allAttr = Model.AllPlayerAttributes;

}

<body>

    <partial name="~/Views/Shared/_SideBar.cshtml" />

    <div class="Title">
        <p>PLAYERS STATS</p>
        <hr style="margin-left:80px;" />
    </div>

    <form method="get">
        <div class="SelectCompetition">
            <input type="submit" asp-action="PlayersStats" asp-route-id="1" value="Bulgarian Teams" />
            <input type="submit" asp-action="PlayersStats" asp-route-id="2" value="European Teams" />
        </div>
    </form>

    <form method="get" class="select">
        <select asp-for="PlayerSorting">
            <option style="color:red">Sort By</option>
            <option value="0">Name</option>
            <option value="1">Team</option>
            <option value="2">City</option>
            <option value="3">Goals</option>
            <option value="4">Passes</option>
            <option value="5">Overall</option>
            <option value="6">Price</option>
        </select>

        <input type="submit" value="Sort" asp-action="PlayersStats" />

        <div class="players">
            <table>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Pos</th>
                    <th scope="col">Age</th>
                    <th scope="col">Nat</th>
                    <th scope="col">Team</th>
                    <th scope="col">City</th>
                    <th scope="col">Ono</th>
                    <th scope="col">Ref</th>
                    <th scope="col">Fin</th>
                    <th scope="col">Pas</th>
                    <th scope="col">Hdn</th>
                    <th scope="col">Tck</th>
                    <th scope="col">Pos</th>
                    <th scope="col">Pac</th>
                    <th scope="col">Sta</th>
                    <th scope="col">Str</th>
                    <th scope="col">Drb</th>
                    <th scope="col">Bcr</th>
                    <th scope="col">OVR</th>
                    <th scope="col">Goals</th>
                    <th scope="col">Passes</th>
                </tr>
                @foreach (var player in @Model.Players)
                {
                    num++;
                    var currAttr = allAttr.FirstOrDefault(x => x.PlayerId == player.Id);
                    <tr>
                        <th scope="row">@num</th>
                        <td><a class="playerStatsLink" asp-action="PlayerDetails" asp-route-id="@player.Id">@player.FirstName @player.LastName</a></td>
                        <td>@player.Position.Abbr</td>
                        <td>@player.Age</td>
                        <td>@player.Nation.Abbr</td>
                        <td>@player.Team.Name</td>
                        <td>@player.City.Name</td>
                        <td class="attributes">@currAttr.OneOnOne</td>
                        <td class="attributes">@currAttr.Reflexes</td>
                        <td class="attributes">@currAttr.Finishing</td>
                        <td class="attributes">@currAttr.Passing</td>
                        <td class="attributes">@currAttr.Heading</td>
                        <td class="attributes">@currAttr.Tackling</td>
                        <td class="attributes">@currAttr.Positioning</td>
                        <td class="attributes">@currAttr.Pace</td>
                        <td class="attributes">@currAttr.Stamina</td>
                        <td class="attributes">@currAttr.Strength</td>
                        <td class="attributes">@currAttr.Dribbling</td>
                        <td class="attributes">@currAttr.BallControll</td>
                        <td>@player.Overall</td>
                        <td>@player.Goals</td>
                        <td>@player.Passes</td>
                    </tr>
                }
            </table>
        </div>
    </form>
</body>