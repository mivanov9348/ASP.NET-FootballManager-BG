@model PlayersViewModel

<style>
    body {
        background-color: black;
    }

    .table-dark {
        margin-left: 70px;
        margin-top: 10px;
        border: 4px solid black;
        box-shadow: 0px 0px 30px white;
    }

    .select {
        margin-left: 70px;
        margin-top: -980px;
        font-weight: bolder;
    }
</style>

@{
    var num = 0;
}


<body>

    <partial name="_SideBar.cshtml" />

    <form method="get" class="select">
        <select asp-for="SortBy">
            <option style="color:red">Sort By</option>
            <option value="1">Name</option>
            <option value="2">Team</option>
            <option value="3">City</option>
            <option value="4">Goals</option>
            <option value="5">Saves</option>
            <option value="6">Attack</option>
            <option value="7">Defense</option>
            <option value="8">Overall</option>
        </select>

        <input type="submit" value="Sort" asp-action="PlayersStats" />
    </form>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Pos</th>
                <th scope="col">Age</th>
                <th scope="col">Nat</th>
                <th scope="col">Team</th>
                <th scope="col">City</th>
                <th scope="col">Att</th>
                <th scope="col">Def</th>
                <th scope="col">Speed</th>
                <th scope="col">OVR</th>
                <th scope="col">Goals</th>
                <th scope="col">Saves</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Players)
            {
                num++;
                <tr>
                    <th scope="row">@num</th>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Position.Abbr</td>
                    <td>@item.Age</td>
                    <td>@item.Nation.Abbr</td>
                    <td>@item.Team.Name</td>
                    <td>@item.City.Name</td>
                    <td>@item.Attack</td>
                    <td>@item.Defense</td>
                    <td>@item.Speed</td>
                    <td>@item.Overall</td>
                    <td>@item.Goals</td>
                    <td>@item.Saves</td>
                </tr>
            }

        </tbody>
    </table>


</body>