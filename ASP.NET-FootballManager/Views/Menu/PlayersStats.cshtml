    @model PlayersViewModel

<style>
    body {
        background-color: black;
        font-family:'OLD SPORT 02 ATHLETIC NCV';
    }

    .players {
        text-align: center;
        margin-top: 30px;
        color: white;
        font-size: 20px;
        margin-left: 90px;
    }

        .players table {
            box-shadow: 0px 0px 10px white;
            border: 5px ridge white;
            width: 100%;
            table-layout: auto;
        }

        .players th {
            color: peru;
        }

    .select {
        margin-left: 90px;
        margin-top: 30px;
        font-weight: bolder;
    }

    .Title {
        margin-top: 30px;
        color: white;
        font-size: 50px;
        font-family: fantasy;
        text-align: center;
    }
</style>

@{
    var num = 0;
}

<body>

    <partial name="~/Views/Shared/_SideBar.cshtml" />

    <div class="Title">
        <p>PLAYERS STATS</p>
        <hr style="margin-left:80px;" />
    </div>

    <form method="get" class="select">
        <select asp-for="SortBy">
            <option style="color:red">Sort By</option>
            <option value="1">Name</option>
            <option value="2">Team</option>
            <option value="3">City</option>
            <option value="4">Goals</option>
            <option value="5">Clean Sheets</option>
            <option value="6">Attack</option>
            <option value="7">Defense</option>
            <option value="8">Overall</option>
        </select>

        <input type="submit" value="Sort" asp-action="PlayersStats" />
    </form>

    <div class="players">

        <table>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Pos</th>
                <th scope="col">Age</th>
                <th scope="col">Nat</th>
                <th scope="col">Team</th>
                <th scope="col">City</th>
                <th scope="col">Att</th>
                <th scope="col">Def</th>
                <th scope="col">Speed</th>
                <th scope="col">OVR</th>
                <th scope="col">Goals</th>
                <th scope="col">Clean Sheets</th>
            </tr>
            @foreach (var item in @Model.Players)
            {
                num++;
                <tr>
                    <th scope="row">@num</th>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Position.Abbr</td>
                    <td>@item.Age</td>
                    <td>@item.Nation.Abbr</td>
                    <td>@item.Team.Name</td>
                    <td>@item.City.Name</td>
                    <td>@item.Attack</td>
                    <td>@item.Defense</td>
                    <td>@item.Speed</td>
                    <td>@item.Overall</td>
                    <td>@item.Goals</td>
                    <td>@item.CleanSheets</td>
                </tr>
            }
        </table>


    </div>



</body>