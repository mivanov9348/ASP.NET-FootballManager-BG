@model PlayersViewModel

<style>
    body {
        background-color: black;
        font-family: 'OLD SPORT 02 ATHLETIC NCV';
    }

    .players {
        text-align: center;
        margin-top: 30px;
        color: white;
        font-size: 20px;
        margin-left: -20px;
    }

        .players table {
            box-shadow: 0px 0px 10px white;
            border: 5px ridge white;
            width: 100%;
            table-layout: auto;
        }

        .players th {
            color: peru;
        }

    .select {
        margin-left: 150px;
        margin-top: -10px;
        font-weight: bolder;
    }

    table, th, td {
        border: 1px solid;
    }

    .Title {
        margin-top: 30px;
        color: white;
        font-size: 50px;
        font-family: fantasy;
        text-align: center;
    }

    .playerStatsLink {
        text-decoration: none;
        color: white;
    }

        .playerStatsLink:hover {
            color: blue;
        }

    .SelectCompetition {
        font-size: 15px;
        margin-left: 520px;
    }

</style>

@{
    var num = 0;
}

<body>

    <partial name="~/Views/Shared/_SideBar.cshtml" />

    <div class="Title">
        <p>PLAYERS STATS</p>
        <hr style="margin-left:80px;" />
    </div>

    <form method="get">
        <div class="SelectCompetition">
            <input type="submit" asp-action="PlayersStats" asp-route-id="1" value="Bulgarian Teams" />
            <input type="submit" asp-action="PlayersStats" asp-route-id="2" value="European Teams" />
        </div>
    </form>

    <form method="get" class="select">
        <select asp-for="PlayerSorting">
            <option style="color:red">Sort By</option>
            <option value="0">Name</option>
            <option value="1">Team</option>
            <option value="2">City</option>
            <option value="3">Goals</option>
            <option value="4">Passes</option>
            <option value="5">Attack</option>
            <option value="6">Defense</option>
            <option value="7">Overall</option>
            <option value="8">Price</option>
        </select>

        <input type="submit" value="Sort" asp-action="PlayersStats" />

        <div class="players">
            <table>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Pos</th>
                    <th scope="col">Age</th>
                    <th scope="col">Nat</th>
                    <th scope="col">Team</th>
                    <th scope="col">City</th>
                    <th scope="col">Att</th>
                    <th scope="col">Def</th>
                    <th scope="col">Speed</th>
                    <th scope="col">OVR</th>
                    <th scope="col">Goals</th>
                    <th scope="col">Passes</th>
                </tr>
                @foreach (var item in @Model.Players)
                {
                    num++;
                    <tr>
                        <th scope="row">@num</th>
                        <td><a class="playerStatsLink" asp-action="PlayerDetails" asp-route-id="@item.Id">@item.FirstName @item.LastName</a></td>
                        <td>@item.Position.Abbr</td>
                        <td>@item.Age</td>
                        <td>@item.Nation.Abbr</td>
                        <td>@item.Team.Name</td>
                        <td>@item.City.Name</td>
                        <td>@item.Attack</td>
                        <td>@item.Defense</td>
                        <td>@item.Speed</td>
                        <td>@item.Overall</td>
                        <td>@item.Goals</td>
                        <td>@item.Passes</td>
                    </tr>
                }
            </table>
        </div>
    </form>
</body>