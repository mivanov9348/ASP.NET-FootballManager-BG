@model StandingsViewModel

<style>
    body {
        background-color: black;
    }

    .table-dark {
        margin-left: 70px;
        margin-top: 10px;
        border: 3px solid black;
        box-shadow: 0px 0px 50px grey;
        background-color: black;
    }

    input {
        font-weight: bolder;
    }

    .select {
        margin-left: 35px;
        margin-top: 10px;
    }

    .Title {
        margin-top: 20px;
        color: white;
        font-size: 50px;
        font-family: fantasy;
        text-align: center;
    }

</style>

@{
    var num = 0;
}

<body>
    <partial name="~/Views/Shared/_SideBar.cshtml" />

    <div class="Title">
        <p>STANDINGS</p>
        <hr style="margin-left:100px;" />
    </div>

    <div class="select">
        <form method="get">
            <select class="select" asp-for="@Model.LeagueId">
                <option style="color:red;font-weight:bolder">Select League</option>
                @foreach (var league in @Model.Leagues)
                {
                    <option value="@league.Id">@league.Name</option>
                }
            </select>

            <input type="submit" value="Select" asp-action="Standings" />
        </form>
    </div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">W</th>
                <th scope="col">D</th>
                <th scope="col">L</th>
                <th scope="col">GS</th>
                <th scope="col">GA</th>
                <th scope="col">GD</th>
                <th scope="col">P</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.VirtualTeams)
            {
                num++;
                <tr>
                    <th scope="row">@num</th>
                    <td>@item.Name</td>
                    <td>@item.Wins</td>
                    <td>@item.Draws</td>
                    <td>@item.Loses</td>
                    <td>@item.GoalScored</td>
                    <td>@item.GoalAgainst</td>
                    <td>@item.GoalDifference</td>
                    <td>@item.Points</td>
                </tr>
            }

        </tbody>
    </table>


</body>