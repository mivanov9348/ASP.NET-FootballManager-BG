@using FootballManager.Core.Models.Menu;
@model MenuViewModel

<style>


    .inbox-sidebar {
        margin-top: 50px;
        background-color: #333;
        color: white;
        padding: 10px;
        width: 250px;
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        overflow-y: auto;
        opacity: 0.9;
    }

        .inbox-sidebar h3 {
            font-size: 18px;
            margin: 0;
        }

        .inbox-sidebar #calendar-content {
            padding: 10px;
        }

    .inbox-message-button {
        background-color: transparent;
        border: none;
        color: white;
        cursor: pointer;
        padding: 5px;
        text-align: left;
        width: 100%;
    }

    .inbox-content {
        max-height: 250px;
        overflow-y: auto;
    }

    .inbox-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        height: 100%;
        width: 250px;
        background-color: rgba(0, 0, 0, 0.7);
        overflow-y: auto;
    }

    .inbox-modal-content {
        background-color: #fff;
        margin: 10% 0;
        padding: 20px;
        width: 100%;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    }

    .inbox-modal .close {
        float: right;
        font-size: 30px;
        font-weight: bold;
        cursor: pointer;
    }

        .inbox-modal .close:hover {
            color: red;
        }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        width: 500px;
        background-color: rgba(0, 0, 0, 0.7);
        overflow-y: auto;
    }

    .modal-content {
        background-color: #fff;
        margin: 0 auto;
        padding: 20px;
        width: 100%;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    }

</style>


<div id="inbox-modal" class="inbox-sidebar" style="left: 0;">
    <h3>Inbox</h3>
    <hr />
    <div id="inbox-content">
        <button class="inbox-message-button" data-message="Message 1">Message 1</button>
        <hr class="line" />
    </div>
</div>

<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p id="modal-message">Modal content goes here.</p>
    </div>
</div>

<script>
    // Get the modal element
    const modal = document.getElementById('myModal');

    // Get the <span> element that closes the modal
    const closeBtn = document.querySelector('.close');

    // Get the modal content element
    const modalMessage = document.getElementById('modal-message');

    // Function to open the modal
    function openModal(message) {
        modal.style.display = 'block'; // Show the modal
        modalMessage.textContent = message; // Set the message content
    }

    // Function to close the modal
    function closeModal() {
        modal.style.display = 'none'; // Hide the modal
    }

    // Attach event listeners to message buttons
    const inboxMessageButtons = document.querySelectorAll('.inbox-message-button');

    inboxMessageButtons.forEach(function (button) {
        button.addEventListener('click', function () {
            // Get the message content from the data attribute
            const message = button.getAttribute('data-message');
            // Open the modal with the selected message
            openModal(message);
        });
    });

    // Close the modal when the close button is clicked
    closeBtn.addEventListener('click', closeModal);

    // Close the modal if the user clicks outside of it
    window.addEventListener('click', function (event) {
        if (event.target === modal) {
            closeModal();
        }
    });
</script>