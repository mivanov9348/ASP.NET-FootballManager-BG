@using FootballManager.Core.Models.Menu;
@model MenuViewModel

<hr class="solid-hr" />

@if (Model.IsLeagueDay)
{
    @if (!Model.IsPlayed)
    {
        <form method="post" asp-controller="Calendar" asp-action="ContinueToNextDay">
            <button type="submit" class="nav-button hover-effect" style="height: 30px;">
                <i class="fas fa-futbol" style="font-size: 40px; color: white;"></i>
                <span class="nav-text" style="color: white;font-weight:bolder;font-size: 20px">
                    Game Day
                </span>
            </button>
        </form>
    }
    else
    {
        <form method="post" asp-controller="Calendar" asp-action="NextDay">
            <button type="submit" class="nav-button hover-effect" style="height: 30px;">
                <i class="fas fa-futbol" style="font-size: 40px; color: white;"></i>
                <span class="nav-text" style="color: white;font-weight:bolder;font-size: 20px">
                    Continue
                </span>
            </button>
        </form>
    }
}
@if (Model.IsDrawDay)
{
    @if (Model.IsChampionsCupDraw)
    {
        <form method="post" asp-controller="Draw" asp-action="Index">
            <button type="submit" class="nav-button hover-effect" style="height: 30px;">
                <i class="fas fa-futbol" style="font-size: 40px; color: white;"></i>
                <span class="nav-text" style="color: white;font-weight:bolder;font-size: 20px">
                    Champions Cup Draw
                </span>
            </button>
        </form>
    }
    else if (Model.IsEuropeanCupDraw)
    {
        <form method="post" asp-controller="Draw" asp-action="Index">
            <button type="submit" class="nav-button hover-effect" style="height: 30px;">
                <i class="fas fa-futbol" style="font-size: 40px; color: white;"></i>
                <span class="nav-text" style="color: white;font-weight:bolder;font-size: 20px">
                    European Cup Draw
                </span>
            </button>
        </form>
    }
    else if (Model.IsCupDraw)
    {
        <form method="post" asp-controller="Draw" asp-action="Index">
            <button type="submit" class="nav-button hover-effect" style="height: 30px;">
                <i class="fas fa-futbol" style="font-size: 40px; color: white;"></i>
                <span class="nav-text" style="color: white;font-weight:bolder;font-size: 20px">
                    Cup Draw
                </span>
            </button>
        </form>
    }
}

<form method="post" asp-controller="Calendar" asp-action="NextDay">
    <button type="submit" class="nav-button hover-effect" style="height: 30px;">
        <i class="fas fa-futbol" style="font-size: 40px; color: white;"></i>
        <span class="nav-text" style="color: white;font-weight:bolder;font-size: 20px">
            Continue
        </span>
    </button>
</form>

<hr class="solid-hr" />
<p style="color:white;font-size:15px">Year: @Model.CurrentYear, Month: @Model.CurrentMonth, Day: @Model.CurrentDay</p>
<hr class="solid-hr" />