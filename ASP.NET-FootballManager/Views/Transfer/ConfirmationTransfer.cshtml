@using FootballManager.Core.Models.Player
@model TransferViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Confirmation Transfer Page</title>
    <style>
        body {
            background-image: url("/Images/Wallpapers/Transfers.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: 'OLD SPORT 02 ATHLETIC NCV';
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.4);
                z-index: -1;
            }

        .card {
            text-align: center;
            background-color: rgba(0, 0, 0, 0.9);
            border-radius: 10px;
            padding: 20px;
            color: white;
            width: 300px;
            transition: transform 0.3s ease-in-out;
            margin-left: 490px;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .player-image {
            margin-left: 60px;
            width: 150px;
            height: 170px;
            object-fit: cover;
            border-radius: 50%;
            margin-top: 10px;
        }

        .button {
            text-align: center;
            margin-left: 560px;
            background-color: #4285F4;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            .button:hover {
                background-color: #3367D6;
            }

        .backButton {
            margin-left: 620px;
            text-align: center;
            background-color: red;
            color: white;
        }

        .title {
            margin-top: 5px;
            text-align: center;
        }
    </style>
</head>
<body>
    <form method="get">
        <h1 class="title">Transfer?</h1>
        <button class="backButton" type="submit" asp-action="Market">Back</button>

        <hr />

        <div class="card">
            <img class="player-image" src="~/Images/Faces/@Model.PlayerToBuy.ProfileImage" />
            <hr />
            <h3>@Model.PlayerToBuy.FirstName @Model.PlayerToBuy.LastName (@Model.PlayerToBuy.Position.Abbr)</h3>
            <hr />
            <p>@Model.PlayerToBuy.Nation.Name</p>
            <hr />
            <p>Overall: @Model.PlayerToBuy.Overall</p>
            <hr />
            <p>Price: @Model.PlayerToBuy.Price</p>
        </div>
        <hr />
        <button class="button" type="submit" asp-action="Buy" asp-route-id="@Model.PlayerToBuy.Id">Confirm Transfer</button>
    </form>
</body>
</html>
